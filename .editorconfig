# .editorconfig for PlatformIO C/C++ projects in VS Code
# See: https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default indentation style
indent_style = space
indent_size = 2

# C/C++ and Arduino files
[*.{ino,cpp,c,h,hpp}]
indent_style = space
indent_size = 2
max_line_length = 100

# Python scripts (e.g., extra scripts in PlatformIO)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# PlatformIO config
[platformio.ini]
indent_style = space
indent_size = 2

# JSON/YAML configuration
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown docs
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefiles
[Makefile]
indent_style = tab
